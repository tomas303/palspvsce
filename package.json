{
  "name": "pascal-lsp",
  "displayName": "pascal-lsp",
  "description": "Pascal language server protocol client",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:pascal",
    "onLanguage:objectpascal"
  ],
  "contributes": {
    "languages": [
      {
        "id": "pascal",
        "aliases": [
          "Pascal",
          "pascal"
        ],
        "extensions": [
          ".pas",
          ".pp",
          ".dpr",
          ".dpk",
          ".inc"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "objectpascal",
        "aliases": [
          "Object Pascal",
          "objectpascal"
        ],
        "extensions": [
          ".pas",
          ".pp",
          ".dpr",
          ".dpk",
          ".inc"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "pascal",
        "scopeName": "source.pascal",
        "path": "./syntaxes/pascal.tmLanguage.json"
      },
      {
        "language": "objectpascal",
        "scopeName": "source.pascal",
        "path": "./syntaxes/pascal.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "Pascal Language Server",
      "properties": {
        "pascalLanguageServer.maxNumberOfProblems": {
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems reported by the server."
        },
        "pascalLanguageServer.serverPath": {
          "type": "string",
          "default": "",
          "description": "Path to a custom Pascal Language Server executable (leave empty to use the built-in server)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && tsc -p ./server",
    "watch": "tsc -watch -p ./ && tsc -watch -p ./server",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "eslint": "^8.18.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  }
}
